<!DOCTYPE html>
<html>
<head>
  <title>Adverlyze</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://api.mapbox.com/mapbox-gl-js/v3.12.0/mapbox-gl.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      font-family: 'Inter', Arial, sans-serif;
      background: #f6f8fa;
    }
    .navbar {
      background: #1a2233;
      color: #fff;
      padding: 18px 32px;
      font-size: 2rem;
      font-weight: bold;
      letter-spacing: 2px;
      box-shadow: 0 2px 8px #0001;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .location {
      font-size: 1rem;
      color: #c3c8d4;
      font-weight: normal;
    }
    .map-container {
      margin: 32px auto;
      max-width: 900px;
      min-width: 320px;
      width: 90vw;
      height: 70vh;
      border-radius: 18px;
      overflow: hidden;
      box-shadow: 0 4px 24px #0002;
      background: #ddd;
      position: relative;
    }
    #map {
      width: 100%;
      height: 100%;
    }
    .button {
      display: inline-block;
      margin: 20px 0 0 32px;
      padding: 10px 24px;
      background: #007cbf;
      color: #fff;
      border-radius: 6px;
      text-decoration: none;
      font-size: 1rem;
      font-weight: bold;
      box-shadow: 0 2px 8px #007cbf22;
      transition: background 0.2s;
    }
    .button:hover {
      background: #005a8d;
    }
  </style>
</head>
<body>

  <div class="map-container">
    <div id="map"></div>
  </div>
  <% if user_signed_in? && current_user.businesses.any? %>
  <% current_user.businesses.each do |business| %>
    <%= link_to "New Ad for #{business.name}", new_business_ad_path(business), class: "button" %>
  <% end %>
<% end %>

  <script src="https://api.mapbox.com/mapbox-gl-js/v3.12.0/mapbox-gl.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Default to Knoxville, TN if geolocation fails
      const DEFAULT_LON = -83.9207;
      const DEFAULT_LAT = 35.9606;
  
      function isValidNumber(n) {
        return typeof n === "number" && !isNaN(n) && isFinite(n);
      }
  
      function showMap(lon, lat) {
        // Debug output
        console.log("showMap called with:", lon, lat);
  
        if (!isValidNumber(lon) || !isValidNumber(lat)) {
          alert("Invalid coordinates for map: " + lon + ", " + lat + ". Using fallback.");
          lon = DEFAULT_LON;
          lat = DEFAULT_LAT;
        }
  
        mapboxgl.accessToken = 'pk.eyJ1Ijoid2l6ZW1vZGUiLCJhIjoiY21hbzgwaXVnMDJoaDJzbzhsbmM3cXV0eSJ9.h66rMjEr-3MLnPctNOrbUw';
        const map = new mapboxgl.Map({
          container: 'map',
          style: 'mapbox://styles/mapbox/streets-v12',
          center: [lon, lat],
          zoom: 13
        });
        new mapboxgl.Marker({color: "#1a2233"})
          .setLngLat([lon, lat])
          .addTo(map);
  
        // Fetch and add ad markers
        fetch('/ads.json')
          .then(resp => resp.json())
          .then(ads => {
            ads.forEach(ad => {
              // Only add marker if both coordinates are present and valid
              if (isValidNumber(ad.longitude) && isValidNumber(ad.latitude)) {
                new mapboxgl.Marker({color: "#007cbf"})
                  .setLngLat([ad.longitude, ad.latitude])
                  .setPopup(new mapboxgl.Popup().setHTML(`<strong>${ad.title}</strong><br>${ad.description}`))
                  .addTo(map);
              }
            });
          });
      }
  
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(position) {
          const lat = position.coords.latitude;
          const lon = position.coords.longitude;
          console.log("Geolocation success:", lon, lat);
  
          // Reverse geocode for city
          fetch(`https://nominatim.openstreetmap.org/reverse?lat=${lat}&lon=${lon}&format=json`)
            .then(resp => resp.json())
            .then(data => {
              let city = data.address.city || data.address.town || data.address.village || data.address.hamlet || data.address.state || "Unknown location";
              document.getElementById("city").textContent = city;
            });
  
          showMap(lon, lat);
        }, function() {
          document.getElementById("city").textContent = "Location permission denied";
          showMap(DEFAULT_LON, DEFAULT_LAT);
        });
      } else {
        document.getElementById("city").textContent = "Geolocation not supported";
        showMap(DEFAULT_LON, DEFAULT_LAT);
      }
    });
  </script>
  
</body>
</html>

